{
  "name": "metalsmith-plugin-name",
  "version": "0.1.1",
  "description": "A Metalsmith plugin to ...",
  "keywords": [
    "metalsmith",
    "metalsmith-plugin",
    "plugin-name",
    "static-site"
  ],
  "source": "src/index.js",
  "main": "./lib/index.cjs",
  "module": "./lib/index.js",
  "type": "module",
  "exports": {
    "import": "./lib/index.js",
    "require": "./lib/index.cjs",
    "default": "./lib/index.js"
  },
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wernerglinka/metalsmith-plugin-name.git"
  },
  "files": [
    "lib",
    "src",
    "README.md"
  ],
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "author": "Werner Glinka <werner@glinka.co>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wernerglinka/metalsmith-plugin-name/issues"
  },
  "homepage": "https://github.com/wernerglinka/metalsmith-plugin-name#readme",
  "devDependencies": {
    "assert-dir-equal": "^1.1.0",
    "auto-changelog": "^2.5.0",
    "c8": "^10.1.3",
    "eslint": "9.32.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.3",
    "microbundle": "^0.15.1",
    "mocha": "11.7.1",
    "prettier": "3.6.2",
    "release-it": "19.0.4"
  },
  "peerDependencies": {
    "metalsmith": "^2.5.0"
  },
  "scripts": {
    "build": "microbundle --entry src/index.js --output lib/index.js --target node -f esm,cjs --strict --generateTypes=false",
    "changelog": "auto-changelog -u --commit-limit false --ignore-commit-pattern '^((dev|chore|ci):|Release)'",
    "coverage": "c8 --include=src/**/*.js --reporter=lcov --reporter=text-summary mocha 'test/index.js' 'test/cjs.test.cjs' 'test/unit/**/*.js' -t 5000",
    "format": "prettier --write \"**/*.{yml,md,js,json}\"",
    "format:check": "prettier --list-different \"**/*.{yml,md,js,json}\"",
    "lint": "eslint --fix .",
    "lint:check": "eslint --fix-dry-run .",
    "prepublishOnly": "npm run build",
    "release:patch": "./scripts/release.sh patch --ci",
    "release:minor": "./scripts/release.sh minor --ci",
    "release:major": "./scripts/release.sh major --ci",
    "release:check": "npm run lint:check && npm run build && release-it --dry-run",
    "test": "c8 --include=src/**/*.js mocha 'test/index.js' 'test/cjs.test.cjs' 'test/unit/**/*.js' -t 5000",
    "test:unit": "mocha 'test/unit/**/*.js' -t 5000",
    "test:esm": "c8 --include=src/**/*.js mocha test/index.js -t 5000",
    "test:cjs": "c8 --include=src/**/*.js mocha test/cjs.test.cjs -t 5000",
    "test:coverage": "c8 npm test",
    "depcheck": "depcheck"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
